@page "/"
@using System.ComponentModel.DataAnnotations
@using MatBlazor

<PageTitle>Drawing Number Generator</PageTitle>

<div style="margin: 20px;">
    <MBCard>
        <h1>🌟 Drawing Number Generator 🌟</h1>
        <MBCardContent>
            <p>
                This tool helps you create unique drawing numbers for our plastic modular belt product line.
            </p>
            <h4>🔍 Instructions:</h4>
            <ol>
                <li><strong>Fill in the Fields:</strong> Enter details like Belt Type, Color, and Width.</li>
                <li><strong>Press 'Generate':</strong> Click the button to create your drawing number.</li>
                <li><strong>Copy & Use:</strong> Easily copy your new drawing number for your records!</li>
            </ol>
            <p>Happy generating! 🎉</p>
        </MBCardContent>
    </MBCard>
</div>

