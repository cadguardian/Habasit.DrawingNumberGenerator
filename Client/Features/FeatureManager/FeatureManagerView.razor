@page "/assembly-essentials"
@using Microsoft.AspNetCore.Components

<div class="container-fluid my-4 no-print">
    <div class="card p-4 shadow">
        <div class="d-flex align-items-center text-secondary mb-4" style="font-size: 1.1em;">
            <i class="fa-solid fa-box-open me-2" aria-hidden="true"></i>
            <span class="fw-bold">Product Specialist</span>
        </div>

        <InputGroupTitle Title="Belt Attributes"
                         Subtitle="Critical Part Attributes & Search Terms"
                         Description="Frequently used search terms to identify parts and verify compatibility with custom configurations." />

        <!-- Button to open modal -->
        <div class="text-center mb-4">
            <button class="btn btn-dark btn-lg" data-bs-toggle="modal" data-bs-target="#assemblyEssentialsModal">View Essentials</button>
        </div>
    </div>
</div>

<!-- Modal for Assembly Essentials Carousel -->
<div class="modal fade" id="assemblyEssentialsModal" tabindex="-1" aria-labelledby="assemblyEssentialsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assemblyEssentialsModalLabel">Assembly Essentials</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-secondary">Swipe or tap to see more.</div>


                <!-- Carousel for Assembly Essentials -->
                <div id="carouselExampleCaptions" class="carousel slide bg-dark p-4 text-light" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="4" aria-label="Slide 5"></button>
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="5" aria-label="Slide 6"></button>
                    </div>

                    <div class="carousel-inner">
                        <!-- Slide 1 -->
                        <div class="carousel-item active">
                            <div class="card mx-auto mb-3 text-dark" style="max-width: 300px; border: 2px solid #343a40; background-color: #ffffff;">
                                <div class="card-body">
                                    <h5 class="card-title">Part Types</h5>
                                    <p class="card-text p-3">Flat Top, Raised Rib, Flush Grid, Curved Top, Solid Top, Smooth Mesh, Vented Top</p>
                                </div>
                            </div>
                            <p class="text-center">Quickly recognizing part types aids in selecting the right components, minimizing assembly errors and improving efficiency.</p>
                        </div>

                        <!-- Slide 2 -->
                        <div class="carousel-item">
                            <div class="card mx-auto mb-3 text-dark" style="max-width: 300px; border: 2px solid #343a40; background-color: #ffffff;">
                                <div class="card-body">
                                    <h5 class="card-title">Special Features</h5>
                                    <p class="card-text p-3">Flight, Hold Down Tab, Scoop, Bucket, High Friction, Retractable, Indent, No Cling</p>
                                </div>
                            </div>
                            <p class="text-center">Understanding special features allows for more precise component selection, enhancing performance for specific applications.</p>
                        </div>

                        <!-- Slide 3 -->
                        <div class="carousel-item">
                            <div class="card mx-auto mb-3 text-secondary" style="max-width: 300px; border: 2px solid #343a40; background-color: #ffffff;">
                                <div class="card-body">
                                    <h5 class="card-title">Link Counts</h5>
                                    <p class="card-text p-3">3 LINK, 4 LINK, 5 LINK, 6 LINK, 8 LINK, 12 LINK</p>
                                </div>
                            </div>
                            <p class="text-center">Link counts impact part compatibility and configuration, ensuring proper assembly in complex builds.</p>
                        </div>

                        <!-- Additional slides (4-6) follow the same pattern as above -->

                    </div>

                    <!-- Carousel controls -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
