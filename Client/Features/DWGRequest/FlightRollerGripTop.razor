@page "/flights-rollers-grips"
@using Microsoft.AspNetCore.Components

<div class="container-fluid my-4 no-print">
    <div class="card p-4 shadow">
        <span class="me-2"><i class="fa-solid fa-cogs"></i></span> <!-- Flights, Rollers, and Grips Icon -->

        <InputGroupTitle Title="Flights, Rollers, and Grips"
                         Subtitle="Additional Stability & Functionality"
                         Description="This section helps in achieving the desired functionality and stability in the belt assembly." />

        <!-- Button to open modal -->
        <div class="text-center mb-4">
            <button class="btn btn-dark btn-lg" data-bs-toggle="modal" data-bs-target="#flightsRollersGripsModal">Open Features</button>
        </div>
    </div>
</div>

<!-- Modal for Flights, Rollers, and Grips Form -->
<div class="modal fade" id="flightsRollersGripsModal" tabindex="-1" aria-labelledby="flightsRollersGripsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="flightsRollersGripsModalLabel">Flights, Rollers, and Grips</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-secondary">Specify any additional features such as flights, rollers, or grip tops.</div>

                <!-- Flights, Rollers, and Grips Form -->
                <form class="row g-3">
                    <!-- Select Flights Roller Grip -->
                    <div class="col-12 col-md-6 col-lg-4">
                        <SelectFlightsRollerGrip />
                    </div>

                    <!-- Input Quantity Rollers Across Width -->
                    <div class="col-12 col-md-6 col-lg-4">
                        <InputQuantityRollersWidth />
                    </div>

                    <!-- Input Flight Rollers Grip Top Centers -->
                    <div class="col-12 col-md-6 col-lg-4">
                        <InputFlightRollersGripTopCenters />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
