@code {
    private bool showOffcanvas = false;

    // Method to toggle the offcanvas visibility
    private void ToggleOffcanvas()
    {
        showOffcanvas = !showOffcanvas;
    }
}

<!-- Centered Button Group -->
<div class="text-center no-print">
    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
        
        <!-- Help Button to open Offcanvas -->
        <button type="button" @onclick="ToggleOffcanvas" class="btn btn-outline-info" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions"  title="Get Help">
            <i class="fas fa-question-circle"></i> Help
        </button>
    </div>
</div>

<!-- Include FontAwesome for Icons (Add in the <head> section of your HTML) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<script>
    // Enable Bootstrap Tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>


<!-- Offcanvas Component -->
<div class="offcanvas offcanvas-start no-print" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel" style="display: @(showOffcanvas ? "block" : "none")">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Help</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close" @onclick="ToggleOffcanvas"></button>
    </div>
    <div class="offcanvas-body overflow-auto " style="max-height: 95vh;">
        <BusinessInstructions />
</div>
</div>

<!-- Include Bootstrap JS and CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom CSS for Smooth Transition and Smaller Text -->
<style>
    .offcanvas {
        transition: transform 0.3s ease-in-out; /* Smooth transition for entering */
    }

        .offcanvas.show {
            transform: translateX(0); /* Original position when open */
        }

        .offcanvas:not(.show) {
            transform: translateX(-100%); /* Move out of view when closed */
        }

    /* Smaller text style */
    .small-text {
        font-size: 0.6rem; /* Adjust size as needed */
    }
</style>
