        flex-grow: 1 !important;
    }

    /* Ensure the search results are scrollable */
    .card-body {
        overflow-y: auto;
    }


    /* Styling for part description */
    .part-description {
        font-size: 0.875em; /* Small text */
        color: #6c757d; /* Muted color */
    }
