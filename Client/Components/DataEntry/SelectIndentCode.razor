@using DNG.Library.Models.BeltSpecs
@inherits BaseInputComponent

<div class="input-group mb-3">
    <div class="form-floating">
    <select id="indentCode" class="form-select form-select-sm"
        @onblur="HandleInputAsync"
        @bind="DrawingRequest!.IndentCode" required>
    <option value="" disabled selected>Select Indent Code</option>
    @foreach (var indent in IndentCode.Options.Values)
    {
        <option value="@indent">@indent</option>
    }
</select>
        <label  for="indentCode">Indent Code</label>

        </div>

    <span class="input-group-text">@IndentCode.GetCodeByName(DrawingRequest!.IndentCode, IndentCode.Options)</span>
    
</div>
