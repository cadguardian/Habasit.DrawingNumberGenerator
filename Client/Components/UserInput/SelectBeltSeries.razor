@inherits BaseInputComponent

<div class="input-group mb-3">
    <label class="input-group-text" for="beltSeries">Series</label>

    <select id="beltSeries" class="form-select form-select-sm"
            @onblur="HandleInputAsync"
            @bind="DrawingRequest.BeltSeries" required autofocus>
        <option value="" disabled selected>Select Belt Series</option>
            @foreach (var series in BeltSeries.Options)
            {
                <option value="@series.Key">@series.Key</option>
            }
    </select>

    <span class="input-group-text">@BeltSeries.GetBeltSeriesType(DrawingRequest.BeltSeries)</span>
</div>

@code{
    protected override void OnInitialized()
    {
        // Set the default value here, based on some logic
        DrawingRequest.BeltType = "M"; // Default value set during initialization
    }
}