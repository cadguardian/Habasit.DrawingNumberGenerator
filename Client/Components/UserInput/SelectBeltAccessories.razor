@inherits BaseInputComponent

<div class="input-group mb-3">
    <label class="input-group-text" for="beltAccessories">Accessories</label>
    <select id="beltAccessories" class="form-select form-select-sm"
            @onblur="HandleInputAsync"
            @bind="DrawingRequest.BeltAccessories" required>
        <option value="" disabled selected>Select Belt Accessories</option>

            @foreach (var accessory in BeltAccessories.Options)
            {
                <option value="@accessory.Key">@accessory.Value</option>
            }
    </select>

        <span class="input-group-text">@DrawingNumber.BeltAccessoriesCode</span>
</div>
