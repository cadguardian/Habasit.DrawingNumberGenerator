@inherits BaseInputComponent

<div class="input-group mb-3">
    <div class="form-floating">
    <select id="color" class="form-select form-select-sm" @onblur="HandleInputAsync"
            @bind="DrawingRequest.Color" required autofocus>
        <option value="" disabled selected>Select Color</option>
            @foreach (var color in MaterialColor.Options.Values.OrderBy(c => c))
            {
                <option value="@color">@color</option>
            }
    </select>
    <label for="color">Color</label>
    </div>


    <span class="input-group-text bg-dark text-light" data-bs-toggle="tooltip1" title="You can remove from query string to widen search!">
        @MaterialColor.GetCodeByName(DrawingRequest.Color, MaterialColor.Options)
    </span>
</div>
