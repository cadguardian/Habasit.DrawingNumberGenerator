@inherits BaseInputComponent

<div class="input-group mb-3">
    <label class="input-group-text" for="frictionAntiStatic">Friction/Anti Static</label>

    <select id="frictionAntiStatic" class="form-select form-select-sm"
            @onblur="HandleInputAsync"
            @bind="DrawingRequest.FrictionAntiStatic" required>
        <option value="" disabled selected>Select Friction/Anti Static</option>
            @foreach (var friction in FrictionAntiStatic.Options)
            {
                <option value="@friction.Key">@friction.Value</option>
            }
    </select>

    <span class="input-group-text">@FrictionAntiStatic.GetNameByCode(DrawingRequest.FrictionAntiStatic, FrictionAntiStatic.Options)</span>
</div>

@code{
    protected override void OnInitialized()
    {
        // Set the default value here, based on some logic
        DrawingRequest.FrictionAntiStatic = "X"; // Default value set during initialization
    }
}