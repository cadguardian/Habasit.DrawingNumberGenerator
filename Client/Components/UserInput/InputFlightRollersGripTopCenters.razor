    <InputNumber id="frgCenters" disabled aria-required="true" aria-describedby="frgCentersHelp"
                 @onblur="HandleInputAsync" @bind-Value="DrawingRequest.FRGCenters"
                 Min="1" Max="100" class="form-control text-center"
                 onfocus="selectAllText(this)" />
