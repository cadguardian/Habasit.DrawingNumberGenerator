@inherits BaseInputComponent

<div class="input-group mb-3">
    <div class="form-floating">
    <select id="sidePLLaneDV" class="form-select form-select-sm" @onblur="HandleInputAsync"
            @bind="DrawingRequest.SidePLLaneDV" required>
        <option value="" disabled selected>Select Side-PL/Lane-DV</option>
            @foreach (var type in SidePLLaneDV.Options.Values)
            {
                <option value="@type">@type</option>
            }
    </select>
        <label class="input-group-text" for="sidePLLaneDV">Side-PL/Lane-DV</label>

        </div>

    <span class="input-group-text">
        @SidePLLaneDV.GetCodeByName(DrawingRequest.SidePLLaneDV, SidePLLaneDV.Options)
    </span>
</div>

@code{
    protected override void OnInitialized()
    {
        // Set the default value here, based on some logic
        DrawingRequest.SidePLLaneDV = "No options";
    }
}