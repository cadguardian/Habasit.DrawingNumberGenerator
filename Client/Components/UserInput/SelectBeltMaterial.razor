@inherits BaseInputComponent

<div class="input-group mb-3">
    <label class="input-group-text" for="material">Material</label>
    <select id="material" class="form-select form-select-sm"
            @onblur="HandleInputAsync"
            @bind="DrawingRequest.Material" required autofocus>
        <option value="" disabled selected>Select Material</option>
            @foreach (var material in BeltMaterial.Options.Values.OrderBy(m=>m))
            {
                <option value="@material">@material</option>
            }
    </select>

    <span class="input-group-text">
        @BeltMaterial.GetCodeByName(DrawingRequest.Material, BeltMaterial.Options)
    </span>
</div>
