@inherits BaseInputComponent

<div class="input-group mb-3">
    <label class="input-group-text" for="adderMaterial">Adder Material</label>
    <select id="adderMaterial" class="form-select form-select-sm"
            @onblur="HandleInputAsync"
            @bind="DrawingRequest.AdderMaterial" required autofocus>
        <option value="" disabled selected>Select Adder Material</option>

            @foreach (var adder in AdderMaterial.Options.Values.OrderBy(a=>a))
            {
                <option value="@adder">@adder</option>
            }
    </select>
    <span class="input-group-text">
            @AdderMaterial.GetCodeByName(DrawingRequest.AdderMaterial,
                 AdderMaterial.Options)
    </span>
</div>

@code{
    protected override void OnInitialized()
    {
        // Set the default value here, based on some logic
        DrawingRequest.AdderMaterial = "No Adder"; // Default value set during initialization
    }
}
