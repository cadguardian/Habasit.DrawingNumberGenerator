@inherits BaseInputComponent

<div class="input-group mb-3">
    <div class="form-floating">

    <select id="flightsRollersGrip" class="form-select form-select-sm"
            @onblur="HandleInputAsync"
            @bind="DrawingRequest.FlightsRollersGrip" required>
            @foreach (var flight in Flights_Rollers_Grips.Options.Values.OrderBy(f=>f))
            {
            <option value="@flight">@flight</option>
            }
    </select>
        <label for="flightsRollersGrip">Flights/Rollers/Grip</label>
        </div>


    <span class="input-group-text">@Flights_Rollers_Grips.GetFlightsRollersGripsCode(DrawingRequest.FlightsRollersGrip)</span>
</div>

@code{
    protected override void OnInitialized()
    {
        // Set the default value here, based on some logic
        DrawingRequest.FlightsRollersGrip = "No Flights"; 
    }
}